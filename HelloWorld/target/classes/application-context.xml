<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
     <context:annotation-config />   

	<!--  <bean 
class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>    -->                               
<!--      Setter based DI -->
    <bean id="employee" class="com.programcreek.helloworld.controller.EmployeeBean" >
        <property name="fullName" value="Lokesh Gupta" />
        <property name="departmentBean" ref="departmentBean"></property>
    </bean>
  
    <bean id="departmentBean" class="com.programcreek.helloworld.controller.DepartmentBean" >
        <property name="name" value="Human Resource" />
    </bean>
 
<!--  Closed Setter based DI -->



<!-- Constructor based DI -->
   <!-- Definition for textEditor bean -->
   <bean id = "textEditor" class = "com.programcreek.helloworld.controller.TextEditor">
      <constructor-arg ref = "spellChecker"/>
   </bean>

   <!-- Definition for spellChecker bean -->
   <bean id = "spellChecker" class = "com.programcreek.helloworld.controller.SpellChecker"></bean>
<!--closed Constructor based DI -->


 	<!-- byName example -->
    <!-- <bean id="application" class="com.programcreek.helloworld.controller.Application" autowire="byName"/>
 
    <bean id="applicationUser" class="com.programcreek.helloworld.controller.ApplicationUser" >
        <property name="name" value="superUser"/>
    </bean> -->
    
	<!-- by type autowiring -->
	<bean id="application" class="com.programcreek.helloworld.controller.Application" autowire="byType"/>
 
    <bean id="bv" class="com.programcreek.helloworld.controller.ApplicationUser" >
        <property name="name" value="superUser"/>
    </bean>
    
    <bean id="customer" class="com.programcreek.helloworld.controller.Customer"/>
    <bean id="k" class="com.programcreek.helloworld.controller.Person" >
        <property name="person_name" value="superUser"/>
    </bean>

   
</beans>